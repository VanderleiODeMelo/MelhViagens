<resources>
    <!-- Base application theme. -->
    <style name="Theme.MelhoresDestinos" parent="Theme.AppCompat.Light.NoActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

    </style>

    <!-- Customize your theme here. -->
    <!-- style 1 -->
    <style name="ToolBarText" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">17sp</item>

    </style>
    <!-- style 2 -->
    <style name="botaoVoltar.Toolbar" parent="Widget.AppCompat.Toolbar">

        <item name="android:background">@color/purple_500</item>
        <item name="titleTextColor">@color/white</item>
        <item name="theme">@style/Theme.MelhoresDestinos</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="titleTextAppearance">@style/ToolBarText</item>
        <item name="windowActionBar">false</item>
    </style>


</resources>



<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base application theme. -->
    <style name="Theme.MelhoresDestinos" parent="Theme.AppCompat.Light.DarkActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="autoCompleteTextViewStyle">@style/autoCompleteTextView</item>


    </style>

    <!-- Customize your theme here. -->

    <style name="autoCompleteTextView" parent="Widget.AppCompat.Light.AutoCompleteTextView">

        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">italic</item>

    </style>


    <style name="texto_alertdialog_personalizado_remover" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">italic</item>

    </style>

    <style name="texto_alertdialog_personalizado_botao" parent="Theme.MaterialComponents.Dialog.Alert">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">

        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>

    </style>


</resources>


